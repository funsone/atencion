<%= simple_form_for(ayuda) do |f| %>
<%= f.error_notification %>
<ul class="list-group ">
      <li class="list-group-item text-muted col-md-12" contenteditable="false"><i class="fa fa-database"></i> Datos<div class="pull-right text-warning">
         <i class="fa fa-asterisk"></i> Campo Obligatorio
      </div></li>
      <li class="list-group-item col-md-12">
<div class="form-inputs">
  <div class="col-md-6">
      <%= f.input :nombre%>
  </div>
  <div class="col-md-6">
      <%= f.association :departamento, :label_method => lambda { |owner| "#{owner.nombre.upcase}"} ,  :include_blank => "Seleccione un departamento..."   %>
  </div>


</div>
</li>
</ul>
</br>
<%= render 'layouts/botones', :f=>f, path: ayudas_path%>
<% end %>
