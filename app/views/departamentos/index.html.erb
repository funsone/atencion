          <td><%= departamento.nombre %></td>
          <td class="text-center">
            <div class="btn-group btn-group-xs form-inline" role="group" aria-label="...">
          <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_departamento_path(departamento),class:"btn btn-info","data-toggle": "tooltip", "data-placement": "top", title: "Editar elemento" %>
        </div></td>
        </tr>
      <% end %>
    </tbody>
  </table>
